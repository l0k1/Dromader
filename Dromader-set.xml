<!-- Agua -->
	<key n="101">
		<name>e</name>
			<desc>WaterDrop</desc> 
		<binding>
			<command>property-assign</command>
			<property>controls/armament/trigger</property>
			<value>true</value>
		</binding>
		<binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/inertia/pointmass-weight-lbs[2]</property>
			<value>0</value>
		</binding>
		<mod-up>
			<binding>
				<command>property-assign</command>
				<property>controls/armament/trigger</property>
				<value>false</value>
			</binding> 
		</mod-up>
	</key>

</keyboard>
</input>

<fdm>
	<jsbsim>
